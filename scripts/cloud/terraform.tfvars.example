# Container images - Update with your actual registry URLs
billing_image  = "ghcr.io/your-org/basilica-billing:latest"
payments_image = "ghcr.io/your-org/basilica-payments:latest"

# Optional: AWS region (default: us-east-1)
# aws_region = "us-west-2"

# Optional: Project name (default: basilica)
# project_name = "my-basilica"

# Optional: SSL certificate for production (required for HTTPS)
# certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/your-cert-id"

# Note: Environment-specific settings are automatically configured based on workspace:
# - dev workspace: 10.0.0.0/16 VPC, t3.micro RDS, minimal ECS sizing
# - prod workspace: 10.1.0.0/16 VPC, t3.small RDS, production ECS sizing